	<creationDate>Jan 2017</creationDate>
	<version>0.0.1</version>
	<author>Trangell</author>
	<authorEmail>info@trangell.com</authorEmail>
	<authorUrl>https://www.trangell.com</authorUrl>
	<copyright>Copyright 2016 Trangell Team.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>پلاگین پرداخت بانک سامان برای هیکاشاپ</description>
	<files>
		<filename plugin="saman">saman.php</filename>
		<filename plugin="saman">saman_end.php</filename>
		<filename plugin="saman">trangell_inputcheck.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field id="pluginoptions" name="pluginoptions" type="pluginoptions" label="hikashop" description="HikaShop options" />
			</fieldset>
		</fields>
	</config>
</extension>
